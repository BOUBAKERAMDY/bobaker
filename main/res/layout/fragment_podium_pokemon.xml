<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PodiumPokemonFragment">

    <TextView
        android:id="@+id/label_podium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:alpha="1.0"
        android:fontFamily="@font/audiowide"
        android:text="Podium"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/podium"
        android:layout_marginBottom="-70dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



    <ImageView
        android:id="@+id/winner_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_win2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="-10dp"
        android:padding="2dp"
        android:fontFamily="@font/audiowide"
        android:text="Podium2 - 200pts"
        android:textColor="@color/black"
        android:background="#BDBDBA"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/winner_2"
        app:layout_constraintRight_toRightOf="@id/winner_2"
        app:layout_constraintBottom_toTopOf="@id/winner_2" />


    <ImageView
        android:id="@+id/winner_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_win1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="-10dp"
        android:padding="2dp"
        android:fontFamily="@font/audiowide"
        android:text="Podium1 - 200pts"
        android:textColor="@color/black"
        android:background="#C1AE0A"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/winner_1"
        app:layout_constraintRight_toRightOf="@id/winner_1"
        app:layout_constraintBottom_toTopOf="@id/winner_1" />


    <ImageView
        android:id="@+id/winner_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_win3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="-10dp"
        android:padding="2dp"
        android:fontFamily="@font/audiowide"
        android:text="Podium1 - 200pts"
        android:textColor="@color/black"
        android:background="#A86400"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/winner_3"
        app:layout_constraintRight_toRightOf="@id/winner_3"
        app:layout_constraintBottom_toTopOf="@id/winner_3" />



</androidx.constraintlayout.widget.ConstraintLayout>